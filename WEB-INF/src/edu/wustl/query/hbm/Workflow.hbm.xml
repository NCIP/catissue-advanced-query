<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
	<class name="edu.wustl.query.domain.Workflow"
		table="QUERY_WORKFLOW" dynamic-update="false" dynamic-insert="false">
		<cache usage="read-write" />

		<id name="id" column="IDENTIFIER" type="long" length="30"
			unsaved-value="null">
			<generator class="native">
				<param name="sequence">QUERY_WORKFLOW_SEQ</param>
			</generator>
		</id>
		
		<property 
			name="name" 
			type="string" 
			update="true" 
			insert="true"
			column="WORKFLOW_NAME" 
			length="1024" 
			 />
		<property 
			name="createdOn" 
			type="date" 
			update="true" 
			insert="true"
			column="CREATED_ON" 
			 />

		<!--   many-to-one
            name="query"
            class="edu.wustl.common.domain.User"
            cascade="none"
            update="true"
            insert="true"
            column="USER_ID"
        /-->

		<list name="workflowItemList" table="QUERY_WORKFLOW_ITEM"
			lazy="false" inverse="false" cascade="all">
			<cache usage="read-write" />
			<key column="WORKFLOW_ID" />
			<index column="POSITION" type="int" />
			<one-to-many
				class="edu.wustl.query.domain.WorkflowItem" />
		</list>

		<property 
			name="createdBy" 
			type="long" 
			update="true" 
			insert="true"
			column="USER_ID" 
			length="1024" 
			 />
	</class>

</hibernate-mapping>
