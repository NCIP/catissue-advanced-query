<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
	<class name="edu.wustl.query.domain.WorkflowItem"
		table="QUERY_WORKFLOW_ITEM" dynamic-update="false" dynamic-insert="false">
		<cache usage="read-write" />

		<id name="id" column="IDENTIFIER" type="long" length="30"
			unsaved-value="null">
			<generator class="native">
				<param name="sequence">QUERY_WORKFLOW_ITEM_SEQ</param>
			</generator>
		</id>
		
		<many-to-one
            name="query"
            class="edu.wustl.common.querysuite.queryobject.impl.AbstractQuery"
            cascade="none"
            update="true"
            insert="true"
            column="QUERY_ID"
        />
	</class>

</hibernate-mapping>
